<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.MainPage">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Minhas Compras"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- SearchBar para busca dinâmica -->
        <SearchBar Placeholder="Buscar produto..."
                   TextChanged="OnSearchBarTextChanged" />

        <!-- Lista de produtos filtrados -->
        <CollectionView ItemsSource="{Binding ProdutosFiltrados}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray">
                        <Label Text="{Binding Nome}" FontSize="18"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
